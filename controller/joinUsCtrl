export const createJoinUs = async (req, res) => {
  try {
    console.log("ğŸ“¥ Incoming data:", req.body); // ğŸ‘ˆ log the incoming data

    const newJoinUs = new JoinUs(req.body);
    await newJoinUs.save();

    res.status(201).json({ message: "Application submitted successfully!" });
  } catch (err) {
    console.error("âŒ Error saving JoinUs form:", err.message); // ğŸ‘ˆ log the error clearly
    res
      .status(500)
